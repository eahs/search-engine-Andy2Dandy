@model RoverSearch.Models.SearchResults 

@{
    ViewData["Title"] = "Search Results";
}

<div class="mt-3 container"> @* This is the container DIV (Opens) *@
    
    @* --- Header Block (Logo, Query, Time) --- *@
    <div class="mb-4 text-center">
        <div class="row align-items-center">
            <div class="col-2">
                <img src="/images/simpsons-logo.png" class="img-fluid my-3"/>
            </div>
            <div class="col-8">
                Showing results for query: <strong>@Model.Query</strong><br/>
                <small class="text-muted">Search completed in @Model.Duration.TotalMilliseconds ms</small>
            </div>
        </div>
    </div>


    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="list-group">
                @foreach (var result in Model.Results)
                {
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <h5 class="mb-1 text-primary">
                                <strong>@result.Title</strong>
                            </h5>
                            <small class="text-muted">@result.Filename</small>
                        </div>
                        
                        <div class="d-flex align-items-center">
                            <span class="badge bg-warning text-dark me-2">Relevance: @result.Score</span>
                            <span class="badge bg-primary rounded-pill">View</span>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div> @* <--- This CLOSES the main container DIV. It MUST be the last line of HTML. *@